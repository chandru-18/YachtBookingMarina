<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Panel ‚Äì Yacht Booking</title>
  <link rel="stylesheet" href="/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>

  <!-- Header -->
  <header>
    <h1>‚öô Admin Panel</h1>
    <p>
      <a href="/dashboard">‚Üê Back to Dashboard</a> | 
      <a href="/logout">Logout</a>
    </p>
  </header>

  <!-- Flash Messages -->
  <% if (messages.success && messages.success.length > 0) { %>
    <div class="flash-success"><%= messages.success[0] %></div>
  <% } %>
  <% if (messages.error && messages.error.length > 0) { %>
    <div class="flash-error"><%= messages.error[0] %></div>
  <% } %>

  <!-- Boat Availability Section -->
  <div class="admin-section">
    <h2>üõ•Ô∏è Set Boat Availability</h2>
    <form method="POST" action="/admin/update-boats">
      <% boats.forEach(boat => { %>
        <label style="display: block; margin: 12px 0; font-weight: 600;">
          <input type="checkbox" name="<%= boat._id %>" <%= boat.availability ? 'checked' : '' %> />
          <%= boat.display %>
          <span class="<%= boat.availability ? 'status-available' : 'status-unavailable' %>">
            (<%= boat.availability ? "Available" : "Unavailable" %>)
          </span>
        </label>
      <% }) %>
      <button type="submit" class="btn-save" style="margin-top: 20px;">‚úÖ Save Changes</button>
    </form>
    <a href="/admin/export/csv" class="btn-save" style="margin-top:20px;display:inline-block;">‚¨áÔ∏è Export CSV</a>
    <a href="/admin/export/pdf" class="btn-save" style="margin-top:20px;display:inline-block;">‚¨áÔ∏è Export PDF</a>
  </div>

  <!-- All Bookings Section -->
  <div class="admin-section">
    <h2>üìã Booking Records</h2>
    <% if (!bookings || bookings.length === 0) { %>
      <p>No bookings found yet.</p>
    <% } else { %>
      <table class="styled-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Boat</th>
            <th>Date</th>
            <th>Hours</th>
            <th>Persons</th>
            <th>Phone</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach((b, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= b.boat && b.boat.name ? b.boat.name : "Unknown" %></td>
              <td><%= b.bookingDate ? b.bookingDate.toLocaleDateString() : "" %></td>
              <td><%= b.startTime && b.endTime ? b.startTime + ' - ' + b.endTime : '--' %></td>
              <td><%= b.numberOfPersons %></td>
              <td>
                <% if (b.phoneNumber) { %>
                  <a href="tel:<%= b.phoneNumber %>"><%= b.phoneNumber %></a>
                <% } else { %>
                  <span style="color:#aaa;">Not provided</span>
                <% } %>
              </td>
              <td><%= b.user && b.user.name ? b.user.name : 'Unknown' %></td>
              <td><%= b.user && b.user.email ? b.user.email : 'Unknown' %></td>
              <td><%= b.status %></td>
              <td>
                <form action="/admin/delete-booking/<%= b._id %>" method="POST" style="display:inline;">
                  <button class="btn-save" onclick="return confirm('Delete this booking?')" style="padding:2px 13px;">üóëÔ∏è Delete</button>
                </form>
                <a href="/admin/edit-booking/<%= b._id %>" class="btn-save" style="padding:2px 13px;">‚úèÔ∏è Edit</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <footer>
    <p>¬© <%= new Date().getFullYear() %> Yacht Marina Booking | Admin Panel</p>
  </footer>

  <!-- Realtime Booking Notification via Socket.IO -->
  <script src="/socket.io/socket.io.js"></script>
  <audio id="notif" src="/ding.mp3" preload="auto"></audio>
  <script>
    const socket = io();
    socket.on('new-booking', () => {
      document.getElementById("notif").play();
      location.reload();
    });
  </script>
</body>
</html>
