<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title><%= pageTitle %></title>
    
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container dashboard-container">
        <h1 class="mb-4">Welcome, <%= user.name %>!</h1>

        <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= messages.error[0] %>
            </div>
        <% } %>
        <% if (messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= messages.success[0] %>
            </div>
        <% } %>
        <% if (messages.info && messages.info.length > 0) { %>
            <div class="alert alert-info" role="alert">
                <%= messages.info[0] %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        User Information
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> <%= user.name %></p>
                        <p><strong>Email:</strong> <%= user.email %></p>
                        <p><strong>Admin:</strong> <%= user.isAdmin ? 'Yes' : 'No' %></p>
                        <p><strong>Email Verified:</strong> <%= user.isVerified ? 'Yes' : 'No' %></p>
                        <% if (!user.isVerified) { %>
                            <p class="text-warning">Please verify your email to access all features.</p>
                            <a href="/verify-email" class="btn btn-sm btn-warning">Verify Email</a>
                        <% } %>
                        <a href="/profile" class="btn btn-sm btn-info mt-2">Edit Profile</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Quick Actions
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/" class="btn btn-primary">Book a New Yacht</a>
                            <a href="/bookings" class="btn btn-secondary">View All My Bookings</a>
                            <% if (user.isAdmin) { %>
                                <a href="/admin/dashboard" class="btn btn-danger">Go to Admin Panel</a>
                            <% } %>
                            <a href="/logout" class="btn btn-outline-danger">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-divider mt-4"></div>

        <h3 style="margin-top: 3rem;">Upcoming Bookings</h3>
        <%
            const now = new Date();
            const upcomingBookings = bookings.filter(b => {
                // ADDED CHECK: Ensure b.bookingDate is not null or undefined
                if (!b.bookingDate) {
                    // console.warn('Booking without bookingDate found:', b._id); // Uncomment for debugging if needed
                    return false; // Exclude this booking if date is missing
                }
                const bookingDateTime = new Date(`${b.bookingDate.toISOString().split('T')[0]}T${b.startTime}:00`);
                return bookingDateTime >= now;
            });
        %>
        <% if (upcomingBookings.length > 0) { %>
            <ul class="list-group mb-4">
                <% upcomingBookings.forEach(booking => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong><%= booking.boat.name %></strong>
                            <p class="mb-0">Date: <%= new Date(booking.bookingDate).toLocaleDateString() %></p>
                            <p class="mb-0">Time: <%= booking.startTime %> - <%= booking.endTime %></p>
                            <p class="mb-0">Persons: <%= booking.numberOfPersons %></p>
                            <p class="mb-0">Total Price: AED<%= booking.totalPrice.toFixed(2) %></p>
                            <p class="mb-0">Status: <span class="badge bg-<%= booking.status === 'confirmed' ? 'success' : (booking.status === 'pending' ? 'warning' : 'secondary') %>"><%= booking.status %></span></p>
                        </div>
                        <div>
                            <% if (booking.status === 'pending' || booking.status === 'confirmed') { %>
                                <form action="/bookings/<%= booking._id %>?_method=POST" method="POST" style="display:inline;">
                                    <input type="hidden" name="status" value="cancelled">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to cancel this booking?');">Cancel</button>
                                </form>
                            <% } %>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No upcoming bookings found.</p>
        <% } %>

        <div class="section-divider mt-4"></div>

        <h3 style="margin-top: 3rem;">Past Bookings</h3>
        <%
            const pastBookings = bookings.filter(b => {
                // ADDED CHECK: Ensure b.bookingDate is not null or undefined
                if (!b.bookingDate) {
                    return false; // Exclude this booking if date is missing
                }
                const bookingDateTime = new Date(`${b.bookingDate.toISOString().split('T')[0]}T${b.startTime}:00`);
                return bookingDateTime < now;
            });
        %>
        <% if (pastBookings.length > 0) { %>
            <ul class="list-group">
                <% pastBookings.forEach(booking => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong><%= booking.boat.name %></strong>
                            <p class="mb-0">Date: <%= new Date(booking.bookingDate).toLocaleDateString() %></p>
                            <p class="mb-0">Time: <%= booking.startTime %> - <%= booking.endTime %></p>
                            <p class="mb-0">Persons: <%= booking.numberOfPersons %></p>
                            <p class="mb-0">Total Price: AED<%= booking.totalPrice.toFixed(2) %></p>
                            <p class="mb-0">Status: <span class="badge bg-<%= booking.status === 'completed' ? 'info' : (booking.status === 'cancelled' ? 'danger' : 'secondary') %>"><%= booking.status %></span></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No past bookings found.</p>
        <% } %>
    </div>

    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>
</html>