<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Admin Dashboard</h1>
        <p>Manage users and bookings</p>
        <nav>
            <ul>
                <li><a href="">Home</a></li>
                <li><a href="dashboard">Dashboard</a></li>
                <li><a href="views/bookings">My Bookings</a></li>
                <li><a href="views/profile">Profile</a></li>
                <li><a href="views/admin/dashboard">Admin Panel</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="message-container">
            <% if (messages.success && messages.success.length > 0) { %>
                <div class="message success"><%= messages.success[0] %></div>
            <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="message error"><%= messages.error[0] %></div>
            <% } %>
        </div>

        <section class="dashboard-section">
            <h2>Admin Overview</h2>

            <p><a href="/admin/yachts" class="btn btn-primary">⛵ Manage Yachts</a></p>

            <div class="dashboard-widgets">
                <div class="widget-card">
                    <h3>Total Users</h3>
                    <p><%= users.length %></p>
                </div>
                <div class="widget-card">
                    <h3>Total Bookings</h3>
                    <p><%= bookings.length %></p>
                </div>
                <div class="widget-card">
                    <h3>Pending Bookings</h3>
                    <p><%= bookings.filter(b => b.status === 'pending').length %></p>
                </div>
            </div>

            <h3 style="margin-top: 3rem;">All Bookings</h3>
            <% if (bookings.length > 0) { %>
                <div class="responsive-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>User</th>
                                <th>Boat</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Persons</th>
                                <th>Phone</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Booked At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(booking => { %>
                                <tr>
                                    <td><%= booking._id.toString().slice(-6) %></td> <td><%= booking.user ? booking.user.name : 'N/A' %></td>
                                    <td><%= booking.boat ? (booking.boat.display || booking.boat.name) : 'N/A' %></td>
                                    <td><%= booking.bookingDate ? booking.bookingDate.toLocaleDateString() : 'N/A' %></td>
                                    <td><%= booking.startTime %> - <%= booking.endTime %></td>
                                    <td><%= booking.numberOfPersons %></td>
                                    <td><%= booking.phoneNumber %></td>
                                    <td>د.إ <%= booking.totalPrice %></td>
                                    <td><span class="status-badge status-<%= booking.status %>"><%= booking.status %></span></td>
                                    <td><%= booking.createdAt ? booking.createdAt.toLocaleDateString() : 'N/A' %></td>
                                    <td>
                                        <a href="/admin/edit-booking/<%= booking._id %>" class="btn btn-primary btn-small">Edit</a>
                                        <form action="/admin/bookings/<%= booking._id %>?_method=DELETE" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-small" onclick="return confirm('Are you sure you want to delete this booking?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center">No bookings have been made yet.</p>
            <% } %>

            <h3 style="margin-top: 3rem;">All Users</h3>
            <% if (users.length > 0) { %>
                <div class="responsive-table">
                    <table>
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Admin</th>
                                <th>Verified</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user._id.toString().slice(-6) %></td>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
                                    <td><%= user.isVerified ? 'Yes' : 'No' %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center">No users registered yet.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Yacht Marina Booking. All rights reserved.</p>
    </footer>
</body>
</html>